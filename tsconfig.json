{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // es2015 not supported by ts-node
    "baseUrl": "src",
    "outDir": "build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es7", "es2017", "es2019"]
  }
}
